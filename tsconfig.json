{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Preserve",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["tests/**/*"],
  "include": ["src/**/*"]
}
